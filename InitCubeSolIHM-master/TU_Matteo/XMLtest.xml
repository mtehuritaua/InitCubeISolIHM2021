<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<initcube>
	<description>
		<id>345ABC</id>
		<proprietaire>CNES</proprietaire>
		<mission>	Promouvoir les activités spatiales auprès des étudiants de l’enseignement supérieur.</mission>
	</description>
    
	<instrument>
		<description>
			<id>123BCD</id>
			<adresse>0x69</adresse>
			<ref>CamInfra</ref>
			<nom>Camera infrarouge</nom>
			<role>mesurer une temperature</role>
		</description>	
		<etat>
			<actif>true</actif>			
			<temperature unite="°C" SeuilALerteHaut="90" SeuilALerteBas="-50">25</temperature>
			<courant unite="mA" SeuilALerte="1500">200</courant>	
			<erreur></erreur>
		</etat>	
		<typeMesure>
			<nom>temperature</nom>
			<code>TC</code>
			<description>Température de l'objet mesuré</description>
			<unite>°C</unite>
			<valMin>-40</valMin>
			<valMax>+90</valMax>
		</typeMesure>
		<typeMesure>
			<code>PIX</code>
			<nom>matrice</nom>
			<description>Matrice d'une température de l'objet mesuré</description>
			<unite>°C</unite>
			<valMin>-40</valMin>
			<valMax>+90</valMax>
		</typeMesure>
  	</instrument>
	  
  	<instrument>
		<description>
			<id>124BCD</id>
			<adresse>0x0C</adresse>
			<ref>Magnetometre</ref>
			<nom>Magnétomètre</nom>
			<role>Mesurer un champ magnétique</role>
		</description>
		<typeMesure>
			<code>BX</code>
			<nom>BX</nom>
			<description>Champ magnetique suivant X </description>
			<unite>μT</unite>
			<valMin>0</valMin>
			<valMax>+100</valMax>
		</typeMesure>
		<typeMesure>
			<nom>BY</nom>
			<code>BY</code>
			<description>Champ magnetique suivant Y </description>
			<unite>μT</unite>
			<valMin>0</valMin>
			<valMax>+100</valMax>
		</typeMesure>
		<typeMesure>
			<nom>BZ</nom>
			<code>BZ</code>
			<description>Champ magnetique suivant Z </description>
			<unite>μT</unite>
			<valMin>0</valMin>
			<valMax>+100</valMax>
		</typeMesure>
  	</instrument>    
</initcube>
